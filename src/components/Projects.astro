---
import LinkButton from "@/components/LinkButton.astro";
import GitHub from "@/components/icons/GitHub.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import PHP from "./icons/PHP.astro";

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-orange-400 text-white",
        icon: HTML,
    },
    CSS: {
        name: "CSS",
        class: "bg-purple-400 text-white",
        icon: CSS,
    },
    PHP: {
        name: "PHP",
        class: "bg-[#8993be] text-white",
        icon: PHP,
    },
};

const PROJECTS = [
    {
        title: "R's Candles",
        description:
            "Este proyecto es una página web para mostrar y vender velas, creada como un ejemplo de tienda en línea. Está desarrollada con HTML, CSS y PHP.",
        github: "https://github.com/Rebe4/WebVelas",
        image: "img/velas.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.PHP],
    },
];
---

{
    PROJECTS.map(({ image, title, description, tags, github }) => (
        <article>
            <h3 class="text-2xl font-semibold text-green-300 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex flex-row mb-2 gap-x-2">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
            <footer class="flex gap-x-4 items-end mt-4">
                <LinkButton href={github}>
                    <GitHub class="size-6" />
                    Ver código fuente
                </LinkButton>
            </footer>
        </article>
    ))
}
